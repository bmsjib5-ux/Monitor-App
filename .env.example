# Application Settings
APP_NAME=Windows Application Monitor
APP_VERSION=4.0.57

# Server Settings
HOST=0.0.0.0
PORT=3001

# Monitoring Settings
UPDATE_INTERVAL=2
HISTORY_LENGTH=60

# Resource Thresholds
CPU_THRESHOLD=80.0
RAM_THRESHOLD=80.0
DISK_IO_THRESHOLD=100.0
NETWORK_THRESHOLD=50.0

# Logging
LOG_FILE=logs/monitor.log
LOG_LEVEL=INFO

# CORS Origins (JSON array format)
CORS_ORIGINS=["http://localhost:3001","http://127.0.0.1:3001","http://localhost:3000","http://127.0.0.1:3000"]

# MySQL Database Settings
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=monitor_app

# Supabase Settings (REST API)
USE_SUPABASE=true
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-key

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-change-this
JWT_EXPIRATION_HOURS=8

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password

# Security Settings
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW=300
MAX_REQUEST_BODY_SIZE=1048576

# TLS/SSL (optional - for HTTPS)
# SSL_CERTFILE=/path/to/cert.pem
# SSL_KEYFILE=/path/to/key.pem
