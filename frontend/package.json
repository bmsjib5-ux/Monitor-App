{
  "name": "monitor-app",
  "version": "4.3.0",
  "private": true,
  "description": "Process Monitor Application - Desktop App",
  "author": "MonitorApp",
  "main": "electron/main.js",
  "dependencies": {
    "@tanstack/react-table": "^8.10.7",
    "axios": "^1.6.2",
    "date-fns": "^2.30.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.10.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.7",
    "vite-plugin-pwa": "^1.2.0",
    "wait-on": "^7.2.0",
    "workbox-window": "^7.4.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:gh-pages": "cross-env GITHUB_PAGES=true tsc && cross-env GITHUB_PAGES=true vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"cross-env BROWSER=none vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:dir": "npm run build && electron-builder --win dir",
    "electron:build:installer": "npm run build && electron-builder --win nsis"
  },
  "build": {
    "appId": "com.monitorapp.desktop",
    "productName": "MonitorApp",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "!node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*.py",
          "requirements.txt",
          "config.yaml",
          "!__pycache__/**",
          "!*.pyc",
          "!venv/**",
          "!.venv/**"
        ]
      },
      {
        "from": "../.env",
        "to": "backend/.env"
      },
      {
        "from": "python-embed",
        "to": "python",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MonitorApp",
      "artifactName": "MonitorApp-Setup-${version}.exe"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
